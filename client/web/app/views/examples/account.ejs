      <section>
        <div class="page-header">
          <h4>Account Register</h4>
        </div>
        
        <p class='g-header'>example</p>
        <div class="sec">
          <form id="register_form">
            <input type="text" name="username" id="username" /><br/>
            <input type="password" name="password" id="password" /><br/>
            <a href="javascript:register();" class="btn">register</a>
          </form>
        </div>

        <p class='g-header'>javascript code</p>
        <pre><code>
  /**
   * Note:
   *
   * be sure to establish connnection to server before sending request
   */
         
  function register() {          
    pomelo.request(
      "ext/account.accountHandler.register", 
      {
        username: "username",
        password: "password"
      },
      function(data) {
        alert(data.code);
      }
    );
  }                </code></pre>    

