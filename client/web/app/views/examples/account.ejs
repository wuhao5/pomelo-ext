<script type="text/javascript">
$(function(){
    hljs.initHighlightingOnLoad();
});

function register(){
    var username = $("#username", "#register_form").val();
    var password = $("#password", "#register_form").val();
    pomeloext.account.register(username, password);
}

function login(){
    var username = $("#username", "#login_form").val();
    var password = $("#password", "#login_form").val();
    pomeloext.account.login(username, password);
}

</script>